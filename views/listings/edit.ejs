<% layout("/layouts/boilerplate") %>
<br><div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
      <div class="mb-3">
        <label for="title" class="form-label">Edit your Title</label>
        <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required/>
      </div>
      
     <div class="mb-3">
      <label for="description" class="form-label">Edit your Description</label>
      <textarea name="listing[description]"  class="form-control" required>
        <%= listing.description %></textarea
              >
     </div>
       
     <div class="mb-3">
      <label for="image" class="form-label">Edit Image</label>

      <input name="listing[image]" value="<%= listing.image %>" type="text" class="form-control" required/>

     </div>

     <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Edit Price</label>
        <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required/>
       </div>
        
       <div class="mb-3 col-md-4">
        <label for="country" class="form-label">Edit Country</label>
        <input
        name="listing[country]"
        value="<%= listing.country %>"
        type="text"
        class="form-control"
        required
      />
       </div>
     </div>
     
    
      
      <div class="mb-3">
        <label for="location" class="form-label">Edit Location</label>
        <input
        name="listing[location]"
        value="<%= listing.location %>"
        type="text"
        class="form-control"
        required
      />
      </div>
     <br />
      <button class="btn btn-dark edit-btn mt-3">Update</button>
    </form>
  </div>
  </div>